@model IEnumerable<Plat1.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<style>
    .bord {
        border: 3px solid green;
        padding: 5px 20px;
        font-size: 20px;
        font-family: verdana;
    }
    a:hover{
        color: white;
        background-color: orange;
    }

</style>
<p>
    <a asp-action="Create" class="bord">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomPlat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomPlat)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="bord">Edit</a>

                    <a asp-action="Delete" asp-route-id="@item.Id" class="bord">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
